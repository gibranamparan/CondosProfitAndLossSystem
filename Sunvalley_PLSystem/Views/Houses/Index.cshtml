@model IEnumerable<Sunvalley_PLSystem.Models.House>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}

<div class="container">
    <div class="panel panel-warning">
        <div class="panel-heading hidden-print">
            All Houses
            </div>
        <div class="panel-body" style="">
            <table id="tabla" class="table table-striped table-hover table-responsive tableJS" style="margin-top:20px;">

                <thead>
                    <tr>
                        @if (User.IsInRole("Administrador"))
                        {
                            <th>
                                @Html.DisplayNameFor(model => model.ApplicationUser.firstName)
                            </th>
                        }
                        <th>
                            @Html.DisplayNameFor(model => model.name)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.area)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.adress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.cityArea)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.country)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.postalCode)
                        </th>
                        <th class="actions hidden-print">
                            @Html.DisplayName("Actions")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @if (User.IsInRole("Administrador"))
                            {
                                <td>
                                    @(item.ApplicationUser.firstName + " " + item.ApplicationUser.lastName)
                                </td>
                            }
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.area)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.adress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cityArea)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.country)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.postalCode)
                            </td>
                            @if (Request.IsAuthenticated)
                            {
                                if (User.IsInRole("Administrador"))
                                {
                                    <td class="hidden-print">

                                        <span class="fa fa-pencil-square-o"></span>@Html.ActionLink("Edit", "Edit", new { id = item.houseID }, null) |
                                        <span class="fa fa-reorder"></span>@Html.ActionLink("Movements", "Details", new { id = item.houseID }, null) |
                                        <span class="fa fa-trash"></span>@Html.ActionLink("Delete", "Delete", new { id = item.houseID }, null)
                                        <span class="fa fa-bar-chart"></span>@Html.ActionLink("Profit and Loss Report", "profitAndLossHouse", "Account", new { idHouse = item.houseID }, null)
                                    </td>

                                }
                                if (User.IsInRole("Cliente"))
                                {
                                    <td class="hidden-print">
                                        <span class="fa fa-reorder hidden-print"></span>@Html.ActionLink("Movements", "Details", new { id = item.houseID }, null)
                                        <span class="fa fa-bar-chart"></span>@Html.ActionLink("Profit and Loss Report", "profitAndLossHouse", "Account", new { idHouse = item.houseID }, null)

                                    </td>

                                }
                            }
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>


