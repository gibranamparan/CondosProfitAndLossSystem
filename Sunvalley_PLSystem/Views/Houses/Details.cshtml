                                @Html.DisplayFor(modelItem => item.createBy)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.code)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.value)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.balance)
                            </td>
                            @*<td>
                        @Html.DisplayFor(modelItem => item.UserID)
                    </td>*@
                            <td>
                                <span class="glyphicon glyphicon-edit"></span>@Html.ActionLink("Edit", "Edit", new { id = item.movementID }) |
                               |
                                <span class="glyphicon glyphicon-trash"></span> @Html.ActionLink("Delete", "Delete", new { id = item.movementID })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
