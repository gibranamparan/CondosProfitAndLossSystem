                                {
                                    if (User.IsInRole("Administrador"))
                                    {
                                        <td>
                                            @Html.DisplayFor(modelItem => item.state)
                                        </td>

                                    }
                                }
                                @*<td>
                        @Html.DisplayFor(modelItem => item.value)
                    </td>*@

                                <td>
                                    @Html.DisplayFor(modelItem => item.amount)
                                </td>
