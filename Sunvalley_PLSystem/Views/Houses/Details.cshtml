<div class="container">
    <h2>Movements of House</h2>

    

    <div class="panel-group">    
        <div class="panel panel-warning">
            <div class="panel-heading">
                @if (Request.IsAuthenticated)
                {
                    if (User.IsInRole("Administrador"))
                    {
                        @Html.ActionLink("Create new movement", "Create", "Movements", new { id = Model.houseID }, null)
                    }
                }
                <table class="table table-striped table-hover col-md-12" style="margin-top:20px">
                    <tr>
                        @*<th>
                            @Html.DisplayName("Name of house")
                        </th>*@
                        <th>
                            @Html.DisplayName("Created By")
                        </th>

                        <th>
                            @Html.DisplayName("Code")
                        </th>

                        <th>
                            @Html.DisplayName("Value")
                        </th>

                        <th>
                            @Html.DisplayName("Amount")
                        </th>
                        <th>
                            @Html.DisplayName("Balance")
                        </th>
                        @*<th>
                    @Html.DisplayNameFor(model => model.UserID)
                </th>*@
                    </tr>
            </div>
            <div class="panel-body">
                    @foreach (var item in Model.movimientos)
                    {
                        <tr>
                            @*<td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.createBy)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.code)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.value)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.balance)
                            </td>
                            @*<td>
                        @Html.DisplayFor(modelItem => item.UserID)
                    </td>*@
                            @if (Request.IsAuthenticated)
                            {
                                if (User.IsInRole("Administrador"))
                                {
                                    <td>
                                        <span class="glyphicon glyphicon-edit"></span>@Html.ActionLink("Edit", "Edit", new { id = item.movementID }) |
                                        |
                                        <span class="glyphicon glyphicon-trash"></span> @Html.ActionLink("Delete", "Delete", new { id = item.movementID })
                                    </td>
                                }
                            } 

                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

