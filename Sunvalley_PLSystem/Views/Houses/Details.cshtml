<div class="container">
    

    

    <div class="panel-group">    
        <div class="panel panel-warning" style="width:100%">
            <div class="panel-heading row hidden-print">
                <h4>Movements of house</h4>   @if (Request.IsAuthenticated)
                {
                    if (User.IsInRole("Administrador"))
                    {
                        <div class="col-md-3">
                            <span class="fa fa-plus-circle"></span>@Html.ActionLink("Create new movement", "Create", "Movements", new { id = Model.houseID }, null)
                        </div>
                    }
                    @*<span class="fa fa-trash"></span>@Html.ActionLink("Report", "profitAndLossHouse","Account", new { idHouse = Model.houseID },null)*@
                }

                @if (Request.IsAuthenticated)
                {
                    if (User.IsInRole("Administrador"))
                    {
                        <div id="Filtros" class="col-md-9">
                            @using (Html.BeginForm("Index", "Movements", FormMethod.Post, new { @class = "col-md-6" }))
                            {
                                @Html.Label("Date")
                                <input type="Month" name="fecha" class="hidden-print" style="text-align:right;">
                                @Html.Hidden("houseID", Model.houseID)
                                @Html.Hidden("Accion", "Autorizar")
                                @Html.Hidden("IdUser",Model.Id)
                                <input type="submit" value="Aprove" class="hidden-print" style="text-align:right;" />
                            }
                            @using (Html.BeginForm("Index", "Movements", FormMethod.Post, new { @class = "col-md-6" }))
                    {
                                @Html.Label("Date")
                                <input type="Month" name="fecha" class="hidden-print" style="text-align:right;">
                                @Html.Hidden("houseID", Model.houseID)
                                @Html.Hidden("Accion", "Desautorizar")
                                <input type="submit" value="unAprove" class="hidden-print" style="text-align:right;" />
                            }

                        </div>
                    }
                }
              

                </div>
            <br />
            <div class="hidden-print">
                @*@using (Html.BeginForm("Details", "Houses", "GET"))
            {
                    @Html.Label("Start")
                    <input class="hidd" type="date" name="fechaInicio">
                    @Html.Label("End")
                    <input type="date" name="fechaFin">
                    @Html.Hidden("houseID", Model.houseID)
                    <input type="submit" value="Mostrar" />
                }*@

