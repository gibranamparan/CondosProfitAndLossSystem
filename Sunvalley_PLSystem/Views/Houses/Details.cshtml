<div class="container">
    <h2>Movements of House</h2>
    <div class="panel-group">    
        <div class="panel panel-warning">
            <div class="panel-heading">
                <table class="table table-striped table-hover col-md-12" style="margin-top:20px"">
                    <tr>
                        <th>
                            @Html.DisplayName("Name of house")
                        </th>
                        <th>
                            @Html.DisplayName("Created By")
                        </th>

                        <th>
                            @Html.DisplayName("Code")
                        </th>

                        <th>
                            @Html.DisplayName("Value")
                        </th>

                        <th>
                            @Html.DisplayName("Amount")
                        </th>
                        <th>
                            @Html.DisplayName("Balance")
                        </th>
                        @*<th>
                    @Html.DisplayNameFor(model => model.UserID)
                </th>*@
                        <th></th>
                    </tr>
</div>
            <div class="panel-body">
                

                    @foreach (var item in Model.movimientos)
                    {
                        <tr>
                            @*<td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>*@
