            <div class="panel-body" style="margin-top: -40px;width: 954px">
               
                <table id="tabla" ta class="table table-striped table-hover col-md-12 table-responsive" style="margin-top: -20px;padding: 0px;padding-top:28px">
                    <thead>
                        <tr>
                            @*<th>
                    @Html.DisplayName("Name of house")
                </th>*@
                            <th>
                                @Html.DisplayName("Created By")
                            </th>

                            <th>
                                @Html.DisplayName("Transaction Date")
                            </th>

                            <th>
                                @Html.DisplayName("Type of movement")
                            </th>

                            @*<th>
                    @Html.DisplayName("Value")
                </th>*@
                            <th>
                                @Html.DisplayName("Service")
                            </th>
