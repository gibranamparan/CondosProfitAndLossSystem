@model Sunvalley_PLSystem.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel" style="width:104% !important">

    <div class="container">
        <div class="panel panel-warning" style="width:100%">
            <div id="PanelHeading" class="panel-heading hidden-print">
                Owner Details
            </div>
            <div id="PanelBody" class="panel-body">
                <table id="Details" class="table table-striped table-hover table-responsive table-bordered ">
                    <thead style="border-bottom-color:black !important;">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.firstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.lastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.createAt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.company)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.adress1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.city)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.country)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.state)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.mobilePhone)
                            </th>
                        </tr>
                    </thead>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.firstName)
                        </td>



                        <td>
                            @Html.DisplayFor(model => model.lastName)
                        </td>



                        <td>
                            @Html.DisplayFor(model => model.createAt)
                        </td>



                        <td>
                            @Html.DisplayFor(model => model.company)
                        </td>



                        <td>
                            @Html.DisplayFor(model => model.adress1)
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.city)
                        </td>



                        <td>
                            @Html.DisplayFor(model => model.country)
                        </td>



                        <td>
                            @Html.DisplayFor(model => model.state)
                        </td>


                        <td>
                            @Html.DisplayFor(model => model.Email)
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.mobilePhone)
                        </td>
                    </tr>
                </table>
                <div class="hidden-print">
                    <span class="fa fa-pencil-square-o hidden-print"></span>@Html.ActionLink("Edit", "Edit", new { id = Model.Id })

                    @if (User.IsInRole("Administrador"))
                    {
                        <span class="fa fa-mail-reply hidden-print"></span>@Html.ActionLink("Back to List", "Index")}
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="panel panel-warning">

            <div id="PanelHeading" class="panel-heading hidden-print">
                Houses of Owner
            </div>
            <div id="PanelBody" class="panel-body">
                @if (User.IsInRole("Administrador"))
                {
                    <span class="fa fa-plus-circle"></span>@Html.ActionLink("Create new house", "Create", "Houses", new { id = Model.Id }, null)
                }
                <table id="tabla" class="table table-striped table-hover table-responsive" style="padding:0px;">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>

                            <th>
                                Status
                            </th>

                            <th>
                                Created
                            </th>

                            <th>
                                Area
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                City/Area
                            </th>
                            <th>
                                Country
                            </th>
                            <th>
                                State Province
                            </th>
                            <th>
                                Postal Code
                            </th>

                            @if (User.IsInRole("Administrador"))
                            {
                                <th class="actionsAccount hidden-print">
                                    @Html.DisplayName("Actions")

                                </th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Houses)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => item.name)
                                </td>

                                <td>
                                    @Html.DisplayFor(model => item.status)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.created)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.area)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.adress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.cityArea)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.country)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.stateProvince)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.postalCode)
                                </td>

                                @if (Request.IsAuthenticated)
                                {
                                    if (User.IsInRole("Administrador"))
                                    {

                                        <td class="hidden-print">
                                            <span class="fa fa-pencil-square-o"></span>@Html.ActionLink("Edit", "Edit", "Houses", new { id = item.houseID }, null) |
                                            <span class="fa fa-reorder"></span>@Html.ActionLink("Movements", "Details", "Houses", new { id = item.houseID }, null) |
                                            <span class="fa fa-trash"></span>@Html.ActionLink("Delete", "Delete", "Houses", new { id = item.houseID }, null) |
                                            <span class="fa fa-bar-chart"></span>@Html.ActionLink("Profit and Loss Report", "profitAndLossHouse", "Account", new { idHouse = item.houseID }, null)
                                        </td>
                                    }
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>