@model IEnumerable<Sunvalley_PLSystem.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<link href="@Url.Content("~/Content/Estilos.css")" rel="stylesheet" type="text/css" />
<p>
    @Html.ActionLink("Create New", "Register")
</p>
<div class="container">
    <div class="panel panel-warning">
        <div class="panel-heading">
            <table class="table table-striped table-hover col-md-12" style="margin-top:20px;">
                <tr>
                    <th>
                        @Html.DisplayName("First Name")
                    </th>
                    <th>
                        @Html.DisplayName("Last Name")
                    </th>
                    <th>
                        @Html.DisplayName("Country")
                    </th>
                    <th>
                        @Html.DisplayName("Mobile Phone")
                    </th>
                    <th>
                        @Html.DisplayName("E-mail")
                    </th>
                    <th>
                        @Html.DisplayName("Actions")
                    </th>

                </tr>
                </div>
        <div class="panel-body" >
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.firstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.lastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.country)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.mobilePhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <span class="glyphicon glyphicon-edit"></span>@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            <span class="glyphicon glyphicon-info-sign"></span>@Html.ActionLink("Houses", "Details", new { id = item.Id }) |
                            <span class="glyphicon glyphicon-trash"></span>@Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                            <span class="glyphicon glyphicon-home"></span>@Html.ActionLink("Create new house", "Create", "Houses", new { id = item.Id }, null)
                        </td>
                    </tr>
                }

            </table>
            </div>
        </div>
    </div>
