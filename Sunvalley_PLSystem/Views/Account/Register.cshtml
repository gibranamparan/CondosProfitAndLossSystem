@model Sunvalley_PLSystem.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="panel-warning">
       
        <div id="PanelHeading" class="panel-heading">
            New account
        </div>
        <div id="PanelBody" class="panel-body">
            @*//roles de usuarios*@
            <div class="row">
                <div class="form-group col-md-6">
                    <label class="control-label labels">Role of user</label>
                    @*@Html.DropDownList("UserRoles")*@
                    <div class="col-xs-12">
                        @Html.DropDownList("UserRoles",
                   (IEnumerable<SelectListItem>)ViewBag.Roles, new { @class = "form-control valid" })
                    </div>
                </div>
            </div>

            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.firstName, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.firstName, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.lastName, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.lastName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.Email1, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Email1, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.Email2, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Email2, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Introduce a strong password." })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    <button class="btn btn-info" type="button" id="btnGeneratePassword">Generate</button>
                    Show Password: <input type="checkbox" id="showPassword" value=" " />
                </div>
            </div>
            <div class="form-group col-md-6" style="margin-bottom: 4px;">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div id="Cliente">

                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.company, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.company, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.adress1, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.adress1, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.adress2, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.adress2, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.city, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.city, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.country, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.country, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.state, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.state, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.businesFax, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.businesFax, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.postalCode, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.postalCode, new { @class = "form-control" })
                    </div>
                </div>

                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.mobilePhone, new { @class = "col-md-2 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.mobilePhone, new { @class = "form-control" })
                    </div>
                </div>
          

                <div class="form-group">
                    <div class="col-md-8 row">
                        <div class="col-md-2">
                            <input type="submit" class="btn btn-default" value="Register" />
                        </div>
                        <p class="col-md-10">A strong password must have 6 characters min. included lower & uppercase and non digit or letter character.</p>
                    </div>
                </div>
            </div>
        </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $().ready(function () {
            registerScreen(1);
        })

        $('#UserRoles').change(function () {

            var value = $(this).val();
            registerScreen(value)
        });

        function registerScreen(mode){
                    
            if (mode == '1') {
                $("#Administrador").fadeIn();
            }
            else {
                $("#Administrador").fadeOut();
            }

            if (mode == '2') {
                $("#Cliente").fadeIn();
            }
            else {
                $("#Cliente").fadeOut();
            }
        }
        function generatePassword() {
            var length = 8,
                charset = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789",
                retVal = "";
            for (var i = 0, n = charset.length; i < length; ++i) {
                retVal += charset.charAt(Math.floor(Math.random() * n));
            }
            return retVal;
        }

        $("#showPassword").click(function () {
            if ($(this).prop("checked"))
                $("#Password").attr("type", "text")
            else
                $("#Password").attr("type", "password")
        })

        $("#btnGeneratePassword").click(function () {
            $("#Password").val(generatePassword());
        })

    </script> 
 }
