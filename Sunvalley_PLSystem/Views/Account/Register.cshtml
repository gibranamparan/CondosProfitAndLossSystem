        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")


            <script>
                $().ready(function () {
                    registerScreen(1);
                })

                $('#UserRoles').change(function () {

                    var value = $(this).val();
                    registerScreen(value)
                });

                function registerScreen(mode){
                    
                    if (mode == '1') {
                        $("#Administrador").fadeIn();
                    }
                    else {
                        $("#Administrador").fadeOut();
                    }

                    if (mode == '2') {
                        $("#Cliente").fadeIn();
                    }
                    else {
                        $("#Cliente").fadeOut();
                    }
                }

            </script>


          
