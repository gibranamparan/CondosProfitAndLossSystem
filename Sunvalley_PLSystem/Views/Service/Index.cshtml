@model IEnumerable<Sunvalley_PLSystem.Models.Services>

@{
    ViewBag.Title = "Index";


    Layout = "~/Views/Shared/_Layout.cshtml";
    String mensaje = ViewBag.mensaje;


}
<h2>Report Settings</h2>
<p>

    <input type="button" value="Create" onclick="location.href='@Url.Action("Create","Service")'" />
</p>
<div class="panel-warning">
    <div class="panel-heading">
        List of Services
    </div>
    <div class="panel-body">
        <table id="Services" class="table table-striped table-hover  table-responsive">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayName("Actions")
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        <span class="fa fa-pencil-square-o"></span> @Html.ActionLink("Edit", "Edit", new { id = item.serviceID }) |
                        <span class="fa fa-trash"></span>@Html.ActionLink("Delete", "Delete", new { id = item.serviceID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<div class="panel-warning">
    <div class="panel-heading">
        General Information
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("GeneralInfo", "Service", FormMethod.Post))
        {
            <textarea rows="8" type="text" style="width: 511px;" name="mensaje" required>@mensaje</textarea>
            <input style="margin-top: -28px;" type="submit" value="Save" class="btn btn-default" />
        }
    </div>
</div>
