@model IEnumerable<Sunvalley_PLSystem.Models.AccountStatusReport>

@{
    ViewBag.Title = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reports</h2>


<table id="Reports"  class="table table-striped table-responsive table-hover" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.house.name)
        </th>
        <th>
            @Html.DisplayName("Date")
        </th>
        <th>
            @Html.DisplayName("Actions")
        </th>
     
    </tr>

@foreach (var item in Model.OrderByDescending(mov=>mov.dateMonth)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.house.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateMonth)
        </td>
       
        <td>
            @*Html.ActionLink("Report", "Details","Houses", new { id = item.houseID, fecha= item.dateMonth },null)*@
            @Html.ActionLink("Report", "ReportedMovements","Movements", new { accountStatusReportID = item.accountStatusReportID },null)
        </td>
    </tr>

}

</table>
