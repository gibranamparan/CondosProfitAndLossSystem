@model IEnumerable<Sunvalley_PLSystem.Models.AccountStatusReport>

@{
    ViewBag.Title = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
    DateTime fechaA = ViewBag.fechaA;
    String id = ViewBag.ID;
}

<h2>Reports</h2>
<div class="row">
    <div id="Filtros" class="hidden-print col-md-12">
        @using (Html.BeginForm("IndexReport", "Movements", FormMethod.Get, new { @class = "col-xs-4 form-horizontal" }))
        {
            @Html.Label("Date", new { @class = "control-label pull-left" })
            <div class="col-md-7">
                @Html.TextBox("fecha", fechaA.ToString("yyyy-MM"), new { @class = "hidden-print form-control", type = "Month", required = "required" })
            </div>
            @Html.Hidden("ID", id);
            <input type="submit" value="Search" class="hidden-print btn btn-default col-md-3" />
        }
    </div>
</div>
    <table id="Reports" class="table table-striped table-responsive table-hover col-md-12">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.house.name)
            </th>
            <th>
                @Html.DisplayName("Date")
            </th>
            <th>
                @Html.DisplayName("Actions")
            </th>

        </tr>

        @foreach (var item in Model.OrderByDescending(mov => mov.dateMonth))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.house.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateMonth)
                </td>

                <td>
                    @*Html.ActionLink("Report", "Details","Houses", new { id = item.houseID, fecha= item.dateMonth },null)*@
                    @Html.ActionLink("Report", "ReportedMovements", "Movements", new { accountStatusReportID = item.accountStatusReportID }, null)
                </td>
            </tr>

        }

    </table>
