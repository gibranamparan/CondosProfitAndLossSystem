@model IEnumerable<Sunvalley_PLSystem.Models.Movement>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery.dataTables.min.js"></script>

<h2 class="no-imprimir">Movements</h2>
<link href="@Url.Content("~/Content/Estilos.css")" rel="stylesheet" type="text/css" />

<br>

<div style="text-align:right;" class="hidden-print">

    @using (Html.BeginForm("Index", "Movements", "POST"))
    {
        @Html.Label("Del")
        <input type="date" name="fechaInicio" class="hidden-print">
        @Html.Label("Al")
        <input type="date" name="fechaFin" class="hidden-print">
        <input type="submit" value="Show Movements" class="hidden-print" />
    }


</div>
<div class="container">
    <div class="panel panel-warning">
        <div class="panel-heading hidden-print">
            <h4>Movements</h4>
            </div>
        <div class="panel-body">
            <table id="" class="table table-striped table-hover col-md-12 table-responsive" style="margin-top:20px;" >
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.house.name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.createBy)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.typeOfMovement)
                        </th>

                        

                        <th>
                            @Html.DisplayNameFor(model => model.amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.balance)
                        </th>
                       
                        <th></th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.house.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.createBy)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.typeOfMovement)
                            </td>

                           

                            <td>
                                @Html.DisplayFor(modelItem => item.amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.balance)
                            </td>
                           
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    <input type="button" class="dt-button-print hidden-print"
           onClick="window.print()"
           value="Print This Report" />
    </div>
           
