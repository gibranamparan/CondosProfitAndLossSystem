@model Sunvalley_PLSystem.Models.Movement

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int houseID = ViewBag.houseID;
}

<h2>Create</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()



        <div class="form-horizontal">

            <div class="panel-warning" style="background-color:white">

                <div id="PanelHeadingCreateMovement" class="panel-heading">

                    <h4>Movement</h4>

                </div>
                <div id="PanelBody" class="panel-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div style="padding-top:10px !important" class="form-group">
                        @Html.Label("Type", htmlAttributes: new { @class = " control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.DropDownListFor(x => x.typeOfMovement, new SelectListItem[]{
                           new SelectListItem() {Text = "Expense", Value="Expense"},
                           new SelectListItem() {Text = "Income", Value="Income"},
                           new SelectListItem() {Text = "TAX", Value="TAX"},
                           new SelectListItem() {Text = "Contribution", Value="Contribution"}}, new { @id = "KindAction", @class="form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.transactionDate, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.transactionDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.transactionDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.description, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.amount, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.amount, new { htmlAttributes = new { @class = "InputAmount form-control" } })
                            @*@Html.ValidationMessageFor(model => model.amount, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                    @Html.Hidden("houseID", houseID)

                    <div id="ListServices">
                        <div class="form-group">
                            @Html.LabelFor(model => model.services.name, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-5">
                                @Html.DropDownList("serviceID", (SelectList)ViewBag.Services, htmlAttributes: new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(model => model.services, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                    </div>




                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>


                    <div>
                        <span class="fa fa-reply"></span>@Html.ActionLink("Back to List", "Index")
                    </div>
                </div>

            </div>
            </div>
    }

    





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script>
    $(document).ready(function () {
        $('#KindAction').change(function () {
            if (this.value == 'Expense' || this.value == 'TAX')
            {
                $("#ListServices").show();
            }
            else {
                $("#ListServices").hide();
            }
        });

        $('.InputAmount').mask('000000000.00', { reverse: true });
    });

</script>
}


